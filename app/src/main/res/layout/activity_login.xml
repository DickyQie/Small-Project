<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <include layout="@layout/divider_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioGroup
            android:id="@+id/bottom_tab_group"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:background="#E4E4E4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="9dp">

            <RadioButton
                android:id="@+id/tab_life"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:checked="true"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/home_bottom_no1"
                android:gravity="center"
                android:text="@string/home_bottom1"
                android:textSize="@dimen/siez_dime5" />

            <RadioButton
                android:id="@+id/tab_profit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/home_bottom_no2"
                android:gravity="center"
                android:text="@string/home_bottom2"
                android:textSize="@dimen/siez_dime5" />

            <RadioButton
                android:id="@+id/tab_invitation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/home_bottom_no3"
                android:gravity="center"
                android:text="@string/home_bottom3"
                android:textSize="@dimen/siez_dime5" />

            <RadioButton
                android:id="@+id/tab_personal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:button="@android:color/transparent"
                android:drawablePadding="-2dp"
                android:drawableTop="@mipmap/home_bottom_no4"
                android:gravity="center"
                android:text="@string/home_bottom4"
                android:textSize="@dimen/siez_dime5" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/login_delete"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#ff2130"
            android:orientation="horizontal"
            android:visibility="gone"
            >


            <LinearLayout
                android:id="@+id/home_close"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_delete"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>